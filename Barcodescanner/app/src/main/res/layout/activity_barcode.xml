<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.BarcodeActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/barcode_imageView"
            app:srcCompat="@drawable/ic_image_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/barcode_title"/>

    <TextView
            android:id="@+id/barcode_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Barcode code"
            app:layout_constraintBottom_toTopOf="@+id/barcode_title"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/barcode_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Barcode scan date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barcode_title" />

    <TextView
            android:background="@drawable/textview_background"
            android:padding="10dp"
            android:id="@+id/barcode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Title"
            android:textSize="25sp"
            android:textColor="#000"
            android:elevation="4dp"/>

    <TextView
            android:id="@+id/barcode_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textview_background"
            android:padding="10dp"
            android:text="Date"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barcode_date"
            android:elevation="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>